<!DOCTYPE html>
<html>
  <head>
    <title>A2KS</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <script type="text/javascript"> <!-- Video.js Player -->
      document.createElement('video');
      document.createElement('audio');
      document.createElement('track');
    </script>
  </head>
  <body>
    <header class="header">
      <div class="container">
        <%= form_tag search_path, method: :get, class: "one" do %>
          <%= search_field_tag :search, params[:search],
            placeholder: "SEARCH", class: "video-search" %>
          <%= submit_tag "GO" %>
        <% end %>
        <nav class="app-nav">
          <ol>
            <li>
              <%= link_to "Home", root_path %>
            </li>
            <% if signed_in? %>
              <li>
                <%= button_to "Sign out", session_path, method: :delete %>
              </li>
              <li>
                <%= button_to "My Dashboard", dashboard_path, method: :get %>
              </li>
            <% else %>
              <li>
                <%= button_to "Sign in", new_session_path, method: :get %>
              </li>
              <li>
                <%= button_to "Sign up", new_user_path, method: :get %>
              </li>
            <% end %>
          </ol>
        </nav>
      </div>
    </header>

    <%= yield %>

    <fieldset class="footer">
      <%= link_to "About", page_path("about"), class: "one" %>
      <%= link_to "Contact", page_path("contact"), class: "two" %>
    </fieldset>
  </body>
</html>
