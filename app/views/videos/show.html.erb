<div class="bodycontainer">
  <h1><%= @video.name %></h1>

  <div class = "videoshow">
    <video class="video-js vjs-default-skin"
      controls preload="auto"
      data-setup='{"example_option":true}'>
      <source src=<%= "#{@video.media.url}.mp4" %> type='video/mp4' />
    </video>
  </div>

  <div class = "videoshow">
    <p> <%= @video.description %> </p>
    <% if current_user.liked_videos.include? @video %>
      <%= button_to "Liked", video_like_path(@video), method: :delete %>
    <% else %>
      <%= button_to "Like", video_like_path(@video) %>
    <% end %>
    <p> <%= pluralize(@video.likes.count, "Like") %> </p>
  </div>
</div>
