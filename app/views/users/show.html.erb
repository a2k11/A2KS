<h1><%= @user.username %>'s Page</h1>

<div class="userprofile">
  <%= image_tag @user.avatar.url(:medium) %>
  <p class="user-bio">
    <%= @user.bio_content %>
  </p>
  <% if current_user.check_user(@user) %>
    <%= form_for @user do |form| %>
      <%= form.text_area :bio_content %>
      <%= form.submit "Enter Bio" %>
    <% end %>
  <% end %>
</div>

<fieldset>
  <% if current_user.check_user(@user) %>
    <%= form_for @user, url: user_path, html: { multipart: true } do |form| %>
      <%= form.file_field :avatar %>
      <%= form.submit "Submit Photo" %>
    <% end %>
  <% end %>
</fieldset>

<div class ="uservideos">
  <%= button_to "Add Video", page_path("addvideo") %>
  <div class="videotable">
    <ul>
      <% uservideoeach = 1 %>
        <li>
          <p> videocontent </p>
          <p> videodescription </p>
          <%= link_to "Edit Video", page_path("editvideo") %>
        </li>
      <% theend = 1 %>
    </ul>
  </div>
</div>
